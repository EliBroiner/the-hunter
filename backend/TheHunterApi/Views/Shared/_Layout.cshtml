<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        /* מסתיר לואדר אוטומטית אחרי 1.5s — גם אם JS נכשל (CDN חסום וכו') */
        #admin-loading{animation:adminHide 0.3s ease 1.2s forwards}
        @@keyframes adminHide{to{opacity:0;visibility:hidden;pointer-events:none}}
    </style>
</head>
<body>
    <div id="admin-loading" class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-light bg-opacity-75" style="z-index: 9999;">
        <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        <span class="ms-2">Loading...</span>
    </div>
    <script>
        (function(){
            var el=document.getElementById('admin-loading');
            function h(){if(el){el.style.display='none';el.remove()}}
            if(document.readyState!=='loading')h();
            else document.addEventListener('DOMContentLoaded',h);
            setTimeout(h,1500);
        })();
    </script>
    <nav class="navbar navbar-dark bg-dark mb-3">
        <div class="container-fluid">
            <span class="navbar-brand">The Hunter — Admin</span>
            <span class="text-light small opacity-75 me-2">(נתונים מ-Firestore: knowledge_base, users, logs. להתחברות: /admin/login?key=מפתח)</span>
            <div class="d-flex gap-2">
                <a href="/admin" class="btn btn-outline-light btn-sm">מונחים</a>
                <a href="/admin/users" class="btn btn-outline-light btn-sm">ניהול משתמשים</a>
                <a href="/admin/logout" class="btn btn-outline-secondary btn-sm">התנתק</a>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
