<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Search Bar - לחיצה פותחת את האפליקציה -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/search_bar_background"
        android:paddingHorizontal="14dp">
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#6366F1" />
            
        <TextView
            android:id="@+id/search_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="לחץ לחיפוש..."
            android:textColor="#888888"
            android:textSize="13sp" />
            
        <ImageView
            android:id="@+id/mic_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="#6366F1" />
    </LinearLayout>

    <!-- Recent File - קובץ אחרון שנפתח -->
    <LinearLayout
        android:id="@+id/recent_file_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_bar_background"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:visibility="gone">
        
        <ImageView
            android:id="@+id/recent_file_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="#8B5CF6"
            android:padding="4dp"
            android:background="@drawable/icon_background" />
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            
            <TextView
                android:id="@+id/recent_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם קובץ"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
                
            <TextView
                android:id="@+id/recent_file_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="נפתח לאחרונה"
                android:textColor="#888888"
                android:textSize="10sp" />
        </LinearLayout>
        
        <!-- Open Button -->
        <ImageView
            android:id="@+id/btn_open_file"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_view"
            android:tint="#6366F1"
            android:padding="4dp" />
            
        <!-- Share Button -->
        <ImageView
            android:id="@+id/btn_share_file"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:src="@android:drawable/ic_menu_share"
            android:tint="#6366F1"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Quick Stats Row -->
    <LinearLayout
        android:id="@+id/stats_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        
        <!-- Files Count -->
        <LinearLayout
            android:id="@+id/stat_files"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            
            <TextView
                android:id="@+id/files_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="קבצים"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />
        </LinearLayout>
        
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#333333" />
        
        <!-- Images Count -->
        <LinearLayout
            android:id="@+id/stat_images"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            
            <TextView
                android:id="@+id/images_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תמונות"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />
        </LinearLayout>
        
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#333333" />
        
        <!-- PDFs Count -->
        <LinearLayout
            android:id="@+id/stat_pdfs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            
            <TextView
                android:id="@+id/pdfs_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
