<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
</head>
<body>
    <div id="admin-loading" class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-light bg-opacity-75" style="z-index: 9999;">
        <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        <span class="ms-2">Loading...</span>
    </div>
    <script>document.addEventListener('DOMContentLoaded', function() { document.getElementById('admin-loading').style.display = 'none'; });</script>
    <nav class="navbar navbar-dark bg-dark mb-3">
        <div class="container-fluid">
            <span class="navbar-brand">The Hunter — Admin</span>
            <div class="d-flex gap-2">
                <a href="/admin" class="btn btn-outline-light btn-sm">מונחים</a>
                <a href="/admin/users" class="btn btn-outline-light btn-sm">ניהול משתמשים</a>
                <a href="/admin/logout" class="btn btn-outline-secondary btn-sm">התנתק</a>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
